<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Fab">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin_bottom</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="FabTwo" parent="Fab">
        <item name="android:layout_alignParentBottom">false</item>
        <item name="android:layout_centerInParent">false</item>
        <item name="android:layout_marginRight">@dimen/fab_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/fab_margin_bottom</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin_bottom</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="FragmentHeaderRelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/middle_size_72dp</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="HorizontalWrapLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ImageView_16">
        <item name="android:layout_width">@dimen/spacing_small_16dp</item>
        <item name="android:layout_height">@dimen/spacing_small_16dp</item>
    </style>


    <style name="ImageView_24">
        <item name="android:layout_width">@dimen/small_size_24dp</item>
        <item name="android:layout_height">@dimen/small_size_24dp</item>
    </style>

    <style name="ImageView_36">
        <item name="android:layout_width">@dimen/small_size_36dp</item>
        <item name="android:layout_height">@dimen/small_size_36dp</item>
        <item name="android:padding">@dimen/spacing_smaller_6dp</item>
    </style>


    <style name="WrapTextView_14">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small_14sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="MatchWrapTextView_12">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_smallest_12sp</item>
    </style>


    <style name="MatchWrapVerticalLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchWrapHorizontalLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="HeaderNavigationTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/small_size_24dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">@dimen/text_size_smallest_12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center_horizontal|bottom</item>
    </style>

    <style name="HorizontalHeaderLine">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/spacing_start_1dp</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="HorizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spacing_start_1dp</item>
    </style>


    <style name="HorizontalLayoutForTaskParameter" parent="MatchWrapHorizontalLayout">
        <item name="android:layout_marginLeft">@dimen/spacing_smaller_6dp</item>
        <item name="android:layout_marginStart">@dimen/spacing_smaller_6dp</item>
        <item name="android:paddingStart">@dimen/spacing_smaller_10dp</item>
        <item name="android:paddingLeft">@dimen/spacing_smaller_10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="VerticalLayoutForTaskParameter" parent="HorizontalLayoutForTaskParameter">
        <item name="android:paddingRight">@dimen/spacing_smaller_10dp</item>
        <item name="android:paddingEnd">@dimen/spacing_smaller_10dp</item>
        <item name="android:paddingTop">@dimen/small_size_24dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="TextViewForTaskParameter_12" parent="MatchWrapTextView_12">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_26dp</item>
        <item name="android:layout_marginStart">@dimen/spacing_normal_26dp</item>
        <item name="android:layout_marginBottom">@dimen/spacing_smaller_8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/grey</item>
    </style>


    <style name="ImageViewForTaskParameter_36" parent="ImageView_36">
        <item name="android:layout_marginLeft">@dimen/spacing_smaller_10dp</item>
        <item name="android:layout_marginStart">@dimen/spacing_smaller_10dp</item>
        <item name="android:layout_marginRight">@dimen/spacing_smaller_10dp</item>
        <item name="android:layout_marginEnd">@dimen/spacing_smaller_10dp</item>
    </style>

    <style name="CalendarDayTextView">
        <item name="android:layout_width">@dimen/spacing_medium_30dp</item>
        <item name="android:layout_height">@dimen/spacing_medium_30dp</item>
        <item name="android:textSize">@dimen/text_size_small_14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/spacing_smaller_4dp</item>
    </style>

    <style name="CalendarDayTextViewTwo" parent="CalendarDayTextView">
        <item name="android:textColor">@color/colorPrimaryTwo</item>
    </style>

    <style name="CalendarDayTextViewGrey" parent="CalendarDayTextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CalendarDayTextViewGreyTwo" parent="CalendarDayTextView">
        <item name="android:textColor">@color/grey_two</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--Style for fill button -->
    <style name="AppTheme.Button.Red" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_small_14sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>


</resources>
