<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/huge_size_300dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="2dp"
    app:cardMaxElevation="@dimen/spacing_smaller_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/spacing_medium_32dp">

            <View
                android:layout_width="@dimen/spacing_smaller_8dp"
                android:layout_height="@dimen/spacing_medium_32dp"
                android:layout_marginEnd="@dimen/spacing_small_16dp"
                android:layout_marginRight="@dimen/spacing_small_16dp"
                android:background="@color/colorPrimary" />

            <TextView
                android:id="@+id/dialog_title"
                style="@style/WrapTextView_14"
                android:layout_marginEnd="@dimen/spacing_small_16dp"
                android:layout_marginRight="@dimen/spacing_small_16dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_normal_18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/spacing_smaller_8dp"
            android:layout_marginTop="@dimen/spacing_small_16dp"
            android:layout_marginRight="@dimen/spacing_smaller_8dp"
            android:background="@color/colorPrimary" />


        <TextView
            android:id="@+id/dialog_text"
            style="@style/WrapTextView_14"
            android:layout_margin="@dimen/spacing_small_16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_smaller_8dp"
            android:layout_marginRight="@dimen/spacing_smaller_8dp"
            android:layout_marginBottom="@dimen/spacing_smaller_8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_button_one"
                style="@style/AppTheme.Button.Red"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:theme="@style/AppTheme.Button.Red" />

            <Button
                android:id="@+id/dialog_button_two"
                style="@style/AppTheme.Button.Red"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:theme="@style/AppTheme.Button.Red" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
