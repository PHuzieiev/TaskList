<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_main_layout"
    style="@style/MatchWrapHorizontalLayout"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:padding="@dimen/spacing_small_16dp">

    <ImageView
        android:id="@+id/item_ico"
        style="@style/ImageView_24"
        android:layout_marginEnd="@dimen/spacing_small_16dp"
        android:layout_marginRight="@dimen/spacing_small_16dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/item_title"
        style="@style/WrapTextView_14"
        android:textColor="@color/colorPrimary" />
</LinearLayout>