<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/huge_size_300dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="2dp"
    app:cardMaxElevation="@dimen/spacing_smaller_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/spacing_medium_32dp">

            <View
                android:layout_width="@dimen/spacing_smaller_8dp"
                android:layout_height="@dimen/spacing_medium_32dp"
                android:layout_marginEnd="@dimen/spacing_small_16dp"
                android:layout_marginRight="@dimen/spacing_small_16dp"
                android:background="@color/colorPrimary" />

            <TextView
                android:id="@+id/dialog_time_title"
                style="@style/WrapTextView_14"
                android:layout_marginEnd="@dimen/spacing_small_16dp"
                android:layout_marginRight="@dimen/spacing_small_16dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_normal_18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/spacing_smaller_8dp"
            android:layout_marginTop="@dimen/spacing_small_16dp"
            android:layout_marginRight="@dimen/spacing_smaller_8dp"
            android:background="@color/colorPrimary" />

        <LinearLayout
            style="@style/MatchWrapHorizontalLayout"
            android:layout_marginTop="@dimen/spacing_smaller_8dp"
            android:gravity="center">

            <TextView
                android:id="@+id/dialog_time_am"
                style="@style/WrapTextView_14"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:padding="@dimen/spacing_small_16dp"
                android:text="@string/am"
                android:textColor="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_smaller_8dp"
                android:layout_marginLeft="@dimen/spacing_smaller_8dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/dialog_time_hours_up"
                    style="@style/ImageView_36"
                    android:src="@drawable/ic_up"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/dialog_time_hours"
                    style="@style/WrapTextView_14"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/dialog_time_hours_down"
                    style="@style/ImageView_36"
                    android:src="@drawable/ic_down"
                    tools:ignore="ContentDescription" />


            </LinearLayout>

            <TextView
                style="@style/WrapTextView_14"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="@string/delimiter"
                android:textColor="@color/colorPrimary" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_smaller_8dp"
                android:layout_marginRight="@dimen/spacing_smaller_8dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/dialog_time_minutes_up"
                    style="@style/ImageView_36"
                    android:src="@drawable/ic_up"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/dialog_time_minutes"
                    style="@style/WrapTextView_14"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/dialog_time_minutes_down"
                    style="@style/ImageView_36"
                    android:src="@drawable/ic_down"
                    tools:ignore="ContentDescription" />


            </LinearLayout>

            <TextView
                android:id="@+id/dialog_time_pm"
                style="@style/WrapTextView_14"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:padding="@dimen/spacing_small_16dp"
                android:text="@string/pm"
                android:textColor="@color/grey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_smaller_8dp"
            android:layout_marginRight="@dimen/spacing_smaller_8dp"
            android:layout_marginBottom="@dimen/spacing_smaller_8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_time_cancel"
                style="@style/AppTheme.Button.Red"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:theme="@style/AppTheme.Button.Red" />

            <Button
                android:id="@+id/dialog_time_done"
                style="@style/AppTheme.Button.Red"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:theme="@style/AppTheme.Button.Red" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
