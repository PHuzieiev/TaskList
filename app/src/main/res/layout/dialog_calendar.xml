                </LinearLayout>

                <LinearLayout
                    style="@style/MatchWrapHorizontalLayout"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/dialog_date_day_22"
                        style="@style/CalendarDayTextViewGrey" />

                    <TextView
                        android:id="@+id/dialog_date_day_23"
                        style="@style/CalendarDayTextViewGrey" />

                    <TextView
                        android:id="@+id/dialog_date_day_24"
                        style="@style/CalendarDayTextViewGrey" />

                    <TextView
                        android:id="@+id/dialog_date_day_25"
                        style="@style/CalendarDayTextViewGrey" />

                    <TextView
                        android:id="@+id/dialog_date_day_26"
                        style="@style/CalendarDayTextViewGrey" />

                    <TextView
                        android:id="@+id/dialog_date_day_27"
                        style="@style/CalendarDayTextViewGreyTwo" />

                    <TextView
                        android:id="@+id/dialog_date_day_28"
                        style="@style/CalendarDayTextViewGreyTwo" />

                </LinearLayout>

                <LinearLayout
                    style="@style/MatchWrapHorizontalLayout"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/dialog_date_day_29"
                        style="@style/CalendarDayTextViewGrey" />

                    <TextView
                        android:id="@+id/dialog_date_day_30"
                        style="@style/CalendarDayTextViewGrey" />

                    <TextView
                        android:id="@+id/dialog_date_day_31"
                        style="@style/CalendarDayTextViewGrey" />

                    <TextView
                        android:id="@+id/dialog_date_day_32"
                        style="@style/CalendarDayTextViewGrey" />

                    <TextView
                        android:id="@+id/dialog_date_day_33"
                        style="@style/CalendarDayTextViewGrey" />

                    <TextView
                        android:id="@+id/dialog_date_day_34"
                        style="@style/CalendarDayTextViewGreyTwo" />

                    <TextView
                        android:id="@+id/dialog_date_day_35"
                        style="@style/CalendarDayTextViewGreyTwo" />

                </LinearLayout>

                <LinearLayout
                    style="@style/MatchWrapHorizontalLayout"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/dialog_date_day_36"
                        style="@style/CalendarDayTextViewGrey" />

                    <TextView
                        android:id="@+id/dialog_date_day_37"
                        style="@style/CalendarDayTextViewGrey" />

                    <TextView
                        android:id="@+id/dialog_date_day_38"
