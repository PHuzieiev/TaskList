                    <TextView
                        android:id="@+id/dialog_date_day_42"
                        style="@style/CalendarDayTextViewGreyTwo" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</android.support.v7.widget.CardView>
