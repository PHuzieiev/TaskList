<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/huge_size_300dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="2dp"
    app:cardMaxElevation="@dimen/spacing_smaller_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/spacing_medium_32dp">

            <View
                android:layout_width="@dimen/spacing_smaller_8dp"
                android:layout_height="@dimen/spacing_medium_32dp"
                android:background="@color/colorPrimary"
                android:layout_marginRight="@dimen/spacing_smaller_8dp"
                android:layout_marginEnd="@dimen/spacing_smaller_8dp" />

            <ImageView
                android:id="@+id/dialog_date_left"
                style="@style/ImageView_36"
                android:src="@drawable/ic_left"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/dialog_date_title"
                style="@style/WrapTextView_14"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_normal_18sp"
                android:textStyle="bold"
                android:layout_width="0dp" />

            <ImageView
                android:id="@+id/dialog_date_right"
                style="@style/ImageView_36"
                android:layout_marginEnd="@dimen/spacing_smaller_8dp"
                android:layout_marginRight="@dimen/spacing_smaller_8dp"
                android:src="@drawable/ic_right"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/spacing_smaller_8dp"
            android:layout_marginTop="@dimen/spacing_small_16dp"
            android:layout_marginRight="@dimen/spacing_smaller_8dp"
            android:background="@color/colorPrimary" />

        <LinearLayout
            style="@style/MatchWrapHorizontalLayout"
            android:gravity="center"
            android:paddingTop="@dimen/spacing_smaller_4dp">

            <TextView
                android:id="@+id/dialog_date_day_title_1"
                style="@style/CalendarDayTextView"/>

            <TextView
                android:id="@+id/dialog_date_day_title_2"
                style="@style/CalendarDayTextView"/>

            <TextView
                android:id="@+id/dialog_date_day_title_3"
                style="@style/CalendarDayTextView"/>

            <TextView
                android:id="@+id/dialog_date_day_title_4"
                style="@style/CalendarDayTextView"/>

            <TextView
                android:id="@+id/dialog_date_day_title_5"
                style="@style/CalendarDayTextView"/>

            <TextView
                android:id="@+id/dialog_date_day_title_6"
                style="@style/CalendarDayTextViewTwo" />

            <TextView
                android:id="@+id/dialog_date_day_title_7"
                style="@style/CalendarDayTextViewTwo"/>

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                style="@style/MatchWrapVerticalLayout"
                android:gravity="center_vertical">

                <LinearLayout
                    style="@style/MatchWrapHorizontalLayout"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/dialog_date_day_1"
                        style="@style/CalendarDayTextViewGrey"/>

                    <TextView
                        android:id="@+id/dialog_date_day_2"
                        style="@style/CalendarDayTextViewGrey"/>

                    <TextView
                        android:id="@+id/dialog_date_day_3"
                        style="@style/CalendarDayTextViewGrey"/>

                    <TextView
                        android:id="@+id/dialog_date_day_4"
                        style="@style/CalendarDayTextViewGrey" />

                    <TextView
                        android:id="@+id/dialog_date_day_5"
                        style="@style/CalendarDayTextViewGrey"/>

                    <TextView
                        android:id="@+id/dialog_date_day_6"
                        style="@style/CalendarDayTextViewGreyTwo"/>

                    <TextView
                        android:id="@+id/dialog_date_day_7"
                        style="@style/CalendarDayTextViewGreyTwo"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/MatchWrapHorizontalLayout"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/dialog_date_day_8"
                        style="@style/CalendarDayTextViewGrey"/>

                    <TextView
                        android:id="@+id/dialog_date_day_9"
                        style="@style/CalendarDayTextViewGrey"/>

                    <TextView
                        android:id="@+id/dialog_date_day_10"
                        style="@style/CalendarDayTextViewGrey"/>

                    <TextView
                        android:id="@+id/dialog_date_day_11"
                        style="@style/CalendarDayTextViewGrey"/>

                    <TextView
                        android:id="@+id/dialog_date_day_12"
                        style="@style/CalendarDayTextViewGrey"/>

                    <TextView
                        android:id="@+id/dialog_date_day_13"
                        style="@style/CalendarDayTextViewGreyTwo"/>

                    <TextView
                        android:id="@+id/dialog_date_day_14"
                        style="@style/CalendarDayTextViewGreyTwo"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/MatchWrapHorizontalLayout"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/dialog_date_day_15"
                        style="@style/CalendarDayTextViewGrey" />

                    <TextView
                        android:id="@+id/dialog_date_day_16"
                        style="@style/CalendarDayTextViewGrey" />

                    <TextView
